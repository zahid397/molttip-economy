'use client';

import { useEffect } from 'react';
import { LeaderboardCard } from './LeaderboardCard';
import { useLeaderboard } from '@/hooks/useLeaderboard';
import { Spinner } from '@/components/common/Spinner';

export const LeaderboardWidget = () => {
  const { leaders, loading, error, usingMock, fetchLeaderboard } = useLeaderboard();

  useEffect(() => {
    fetchLeaderboard();
  }, [fetchLeaderboard]);

  if (loading) {
    return (
      <div className="flex justify-center py-8">
        <Spinner size="lg" />
      </div>
    );
  }

  // Even if there's an error, we should have data (mock) because service returns mock on error
  // So we can show error message as a small warning alongside data
  return (
    <div className="space-y-3">
      {usingMock && (
        <div className="p-2 bg-yellow-500/20 border border-yellow-500/40 rounded-lg text-yellow-300 text-sm flex items-center gap-2">
          <span>âš¡ Demo Mode: Showing sample data (backend unreachable)</span>
        </div>
      )}
      {leaders.length === 0 ? (
        <div className="glass-panel p-6 text-center">
          <p className="text-gray-400">No leaderboard data available.</p>
        </div>
      ) : (
        leaders.map((user, index) => (
          <LeaderboardCard key={user.address} user={user} rank={index + 1} />
        ))
      )}
    </div>
  );
};
